<div class="container">
  <h1>Questions#index</h1>
  <%= link_to 'New', new_question_path %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>カリキュラム</th>
        <th>チャプター</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @questions.each do |question| %>
        <%= content_tag :tr, id: dom_id(question), class: dom_class(question) do %>
          <td><%= question.id %></td>
          <td><%= question.title %></td>
          <td><%= question.chapter.curriculum.name %></td>
          <td><%= question.chapter.name %></td>
          <td>
            <%= link_to 'Edit', edit_question_path(question) %>
          </td>
        <% end %>
      <% end %>
      </tbody>

    </table>
  </div>

</div>
